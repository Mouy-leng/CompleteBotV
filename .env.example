# ==========================================
# CAPITALend AI Trading Bot Configuration
# ==========================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# Environment Configuration
NODE_ENV=development
TRADING_ENVIRONMENT=demo

# Database Configuration
DATABASE_URL=sqlite:///trading_bot.db
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Demo Trading API Credentials
CAPITAL_API_KEY_DEMO=your_capital_demo_api_key
CAPITAL_API_SECRET_DEMO=your_capital_demo_secret
CAPITAL_ACCOUNT_ID_DEMO=your_capital_demo_account_id

BINANCE_API_KEY_DEMO=your_binance_testnet_api_key
BINANCE_API_SECRET_DEMO=your_binance_testnet_secret

MT5_SERVER_DEMO=demo_server_address
MT5_LOGIN_DEMO=your_mt5_demo_login
MT5_PASSWORD_DEMO=your_mt5_demo_password

# Live Trading API Credentials (Use with EXTREME caution)
CAPITAL_API_KEY_LIVE=your_capital_live_api_key
CAPITAL_API_SECRET_LIVE=your_capital_live_secret
CAPITAL_ACCOUNT_ID_LIVE=your_capital_live_account_id

BINANCE_API_KEY_LIVE=your_binance_live_api_key
BINANCE_API_SECRET_LIVE=your_binance_live_secret

MT5_SERVER_LIVE=live_server_address
MT5_LOGIN_LIVE=your_mt5_live_login
MT5_PASSWORD_LIVE=your_mt5_live_password

# Data Sources API Keys
FRED_API_KEY=your_fred_api_key
FMP_API_KEY=your_financial_modeling_prep_key
NEWS_API_KEY=your_news_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Notification Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Security & Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret

# Google Cloud Configuration (for deployment)
GOOGLE_CLOUD_PROJECT_ID=your_gcp_project_id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_SQL_INSTANCE=your_cloud_sql_instance
DB_USER=trading_bot_user
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot_production

# Server Configuration
PORT=5000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# Logging & Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# AI Model Configuration
MODEL_STORAGE_PATH=models/trained/
USE_GPU=false
BATCH_SIZE=32
LEARNING_RATE=0.001

# Risk Management Overrides
MAX_RISK_PER_TRADE=2.0
MAX_TOTAL_RISK=10.0
MAX_DAILY_LOSS=5.0
EMERGENCY_STOP_LOSS=true

# WebSocket Configuration
WS_PORT=5000
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100